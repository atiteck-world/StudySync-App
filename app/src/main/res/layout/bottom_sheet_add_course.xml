<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?attr/colorSurface"
    android:clipToPadding="false"
    android:layout_gravity="center_horizontal">

    <!-- Course Name Input -->
    <EditText
        android:id="@+id/etCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course Name"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Credit Points Input -->
    <EditText
        android:id="@+id/etCreditPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Credit Points"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Semester Start Date Input -->
    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date (e.g., 01/01/2024)"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Semester End Date Input -->
    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date (e.g., 30/06/2024)"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Daily Study Hours Input -->
    <EditText
        android:id="@+id/etDailyStudyHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Daily Study Hours"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Study Days per Week Input -->
    <EditText
        android:id="@+id/etStudyDaysPerWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Study Days per Week"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Completed Study Hours Input -->
    <EditText
        android:id="@+id/etCompletedStudyHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Completed Study Hours"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"/>

    <!-- Auto-calculated Total Study Hours -->
    <TextView
        android:id="@+id/tvTotalStudyHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Study Hours: 0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Add Course Button -->
    <Button
        android:id="@+id/btnAddCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Course"
        style="@style/ButtonStyle"/>
</LinearLayout>
